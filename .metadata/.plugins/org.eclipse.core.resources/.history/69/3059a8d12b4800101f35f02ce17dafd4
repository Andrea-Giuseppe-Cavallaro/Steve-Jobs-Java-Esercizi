package _07_geometria;

public class Main {

	public static void main(String[] args) {
		Forma triangolo = new Triangolo(10 ,20, 30, 40, 50);
		Forma quadrato = new Quadrato(10.10);
		Forma cerchio = new Cerchio(100.50);
		
		System.out.println("Area triangolo: " + triangolo.calcolaArea() + "Perimetro triangolo: " + triangolo.calcolaPerimetro());
		System.out.println("Area quadrato: " + quadrato.calcolaArea() + "Perimetro quadrato: " + quadrato.calcolaPerimetro());
		System.out.println("Area cerchio: " + cerchio.calcolaArea() + "Perimetro cerchio: " + cerchio.calcolaPerimetro());
	}

}
