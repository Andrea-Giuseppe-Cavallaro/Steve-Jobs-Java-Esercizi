package _07_geometria;

public class Triangolo extends Forma{
	private float latoA;
	private float latoB;
	private float latoC;
	private float base;
	private float altezza;
	
	public Triangolo(float latoA, float latoB, float latoC, float base, float altezza) {
		this.latoA = latoA;
		this.latoB = latoB;
		this.latoC = latoC;
		this.base = base;
		this.altezza = altezza;
	}
	
	@Override
	public float calcolaArea() {
		float area;
		area = (base * altezza)/2;
		return area;
	}
	
	@Override
	public float calcolaPerimetro() {
		float perimetro;
		perimetro = latoA + latoB + latoC;
		return perimetro;
	}
	
}
